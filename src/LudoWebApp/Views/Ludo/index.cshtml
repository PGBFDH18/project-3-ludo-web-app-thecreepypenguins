                     {
                        new SelectListItem { Text = "", Value = "-1" },
                        new SelectListItem { Text = "Red", Value = "0" },
                        new SelectListItem { Text = "Green", Value = "1" },
                        new SelectListItem { Text = "Blue", Value = "2" },
                        new SelectListItem { Text = "Yellow", Value = "3" },
                     })

                <br />
